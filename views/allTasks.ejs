<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="./favicon.ico" type="image" />
    <!-- font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <!-- normalize css -->
    <!-- main css -->
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/main.css" />

    <title>Task Manager</title>
  </head>
  <body>
    <section class="overall-setup">
      <div class="task-wapper">
        <form class="task-form">
          <h4>task manager</h4>
          <div class="form-control">
            <input
              type="text"
              name="name"
              class="task-input"
              id="taskValue"
              placeholder="e.g. wash dishes"
            />
            <button type="submit" class="btn submit-btn">submit</button>
          </div>
          <div class="form-alert"></div>
        </form>
      </div>
    </section>
    <div class="All-tasks">
      <% if (tasks.length > 0) { %> <% tasks.forEach(task => { %>
      <div class="single-task completed">
        <% if (task.completed === true) { %>
        <h2 class="task-completed"><%= task.name %></h2>
        <% } else { %>
        <h2><%= task.name %></h2>
        <% } %>
        <div class="task-links">
          <!-- edit link -->
          <a
            href="/api/v1/tasks/specificTask/<%= task.name %>"
            class="edit-link"
            data-taskid="<%= task._id %>"
          >
            <i class="fas fa-edit fa-edit"></i>
          </a>
          <!-- delete btn -->

          <button type="button" class="delete-btn">
            <i
              class="fas fa-trash fa-delete"
              data-taskdelid="<%= task._id %>"
            ></i>
          </button>
        </div>
      </div>
      <% }); %> <% } else { %>
      <p>No tasks found.</p>
      <% } %>
    </div>
    <!-- axios -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
      integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/browser.js"></script>
  </body>
</html>
